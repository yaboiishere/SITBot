<div class="col-lg-12">
  <h1>Gifs</h1>
  <table>
    <thead>
      <tr>
        <th><h2>Gif name</h2></th>
        <th><h2>Description</h2></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @gifs.each do |gif| %>
        <tr><h3>
          <td><h3><%= gif.gif_name %></h3></td>
          <td><h3><%= gif.description %></h3></td>
        <!--  <td><%= gif.gif_tags %></td>-->
      </h3>
          <td><%= link_to 'Show', gif ,class: "btn btn-primary"%></td>
          <td><%= link_to 'Edit', edit_gif_path(gif), class: "btn btn-warning" %></td>
          <td><%= link_to 'Destroy', gif, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Update", "/update", class: "btn btn-primary"%>
  <%= link_to 'New Gif', new_gif_path, class: "btn btn-success" %>
</div>
